@model BMSApplication.Models.Transaction

@{
    ViewBag.Title = "Edit";
}

<div class="span12">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-inbox"></i>
            <h3>Modify Transaction Information</h3>
        </div> <!-- /widget-header -->
        <div class="widget-content">
            @using (Html.BeginForm("Edit", "Transactions", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <fieldset>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="control-group">
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "span6" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.VarietyId, "VarietyId", htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.DropDownList("VarietyId", null, htmlAttributes: new { @class = "span6" })
                            @Html.ValidationMessageFor(model => model.VarietyId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.ReceiptId, "ReceiptId", htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.DropDownList("ReceiptId", null, htmlAttributes: new { @class = "span6" })
                            @Html.ValidationMessageFor(model => model.ReceiptId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.UserId, "UserId", htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "span6" })
                            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.Sell, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Sell, new { htmlAttributes = new { @class = "span6" } })
                            @Html.ValidationMessageFor(model => model.Sell, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "span6" } })
                            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            <input type="submit" value="Save" class="btn btn-success" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default", @style = "width:100px" })
                        </div>
                    </div>
                </fieldset>
            }

        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
