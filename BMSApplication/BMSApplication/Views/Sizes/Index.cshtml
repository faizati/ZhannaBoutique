@model IEnumerable<BMSApplication.Models.Size>

@{
    ViewBag.Title = "Index";
}

<h2>Size List</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Label)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifyDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifyBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Label)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyBy)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-small btn-invert", @style = "width:70px" })
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-small btn-invert", @style = "width:70px" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-small btn-danger", @style = "width:70px" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("New Size", "Create", null, new { @class = "btn btn-small btn-success" })
</p>
