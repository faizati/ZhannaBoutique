@model BMSApplication.Models.Product

@{
    ViewBag.Title = "Delete";
}

<div class="span12">

    <div class="widget ">

        <div class="widget-header">
            <i class="icon-inbox"></i>
            <h3>Delete Product</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">
            <h3>Are you sure you want to delete this?</h3>
            &nbsp;
            <table class="table">
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Name)</td>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Category)</td>
                        <td>@Html.DisplayFor(model => model.Category)</td>
                    </tr>
                    <tr>
                        <td>Cost Price</td>
                        <td>@Html.DisplayFor(model => model.Cost)</td>
                    </tr>
                    <tr>
                        <td>Sell Price</td>
                        <td>@Html.DisplayFor(model => model.Sell)</td>
                    </tr>
                    <tr>
                        <td>Created By</td>
                        <td>@ViewBag.CreatedName</td>
                    </tr>
                    <tr>
                        <td>Created Date</td>
                        <td>@String.Format("{0:f}", Model.CreatedDate)</td>
                    </tr>
                    <tr>
                        <td>Modified By</td>
                        <td>@ViewBag.ModifiedName</td>
                    </tr>
                    <tr>
                        <td>Last Modified</td>
                        <td>@String.Format("{0:f}", Model.ModifyDate)</td>
                    </tr>
                </tbody>

            </table>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" style="width:120px" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default", @style="width:120px" })
                </div>
            }
        </div>
    </div>
</div>