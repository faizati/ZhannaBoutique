@model IEnumerable<BMSApplication.Models.Product>


@{
    ViewBag.Title = "Index";
}

<h2>Product List</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Category
            </th>
            <th>
                Cost Price
            </th>
            <th>
                Sell Price
            </th>
            <th>
                Last Modified
            </th>
            <th>
                Modified By
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var listUser = (List<BMSApplication.Models.User>)ViewBag.Users;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sell)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.ModifyBy )*@
                    @Html.DisplayFor(modelItem => listUser.FirstOrDefault(u=>u.Id == item.ModifyBy).Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-small btn-invert", @style = "width:70px" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-small btn-invert", @style = "width:70px" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-small btn-danger", @style = "width:70px" })
                </td>
            </tr>
        }

    </tbody>
</table>
<p>
    @Html.ActionLink("New Product", "Create", null, new { @class = "btn btn-small btn-success" })
</p>

