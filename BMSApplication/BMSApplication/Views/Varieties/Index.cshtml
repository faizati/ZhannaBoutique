@model IEnumerable<BMSApplication.Models.Variety>

@{
    ViewBag.Title = "Index";
}

<h2>Varieties List</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Color.Label)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size.Label)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Color.Label)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size.Label)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-small btn-invert", @style = "width:70px" })
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-small btn-invert", @style = "width:70px" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-small btn-danger", @style = "width:70px" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("New Variety", "Create", null, new { @class = "btn btn-small btn-success" })
</p>
