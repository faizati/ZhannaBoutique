@model BMSApplication.Models.Receipt

@{
    ViewBag.Title = "Edit";
}


<div class="span12">

    <div class="widget ">

        <div class="widget-header">
            <i class="icon-inbox"></i>
            <h3>Modify Receipt Information</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">
            @using (Html.BeginForm("Edit", "Receipts", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>           
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="control-group">
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "span6" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.Total, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "span6" } })
                            @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.Method, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Method, new { htmlAttributes = new { @class = "span6" } })
                            @Html.ValidationMessageFor(model => model.Method, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.Tendered, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Tendered, new { htmlAttributes = new { @class = "span6" } })
                            @Html.ValidationMessageFor(model => model.Tendered, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.Change, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Change, new { htmlAttributes = new { @class = "span6" } })
                            @Html.ValidationMessageFor(model => model.Change, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.CreditCardInvoice, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            @Html.EditorFor(model => model.CreditCardInvoice, new { htmlAttributes = new { @class = "span6" } })
                            @Html.ValidationMessageFor(model => model.CreditCardInvoice, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            <input type="submit" value="Save" class="btn btn-success" style="width:100px" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default", @style = "width:100px" })
                        </div>
                    </div>

              </fieldset>
            }
        </div>
    </div>
</div>
