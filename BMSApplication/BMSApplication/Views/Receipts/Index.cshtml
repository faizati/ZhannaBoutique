@model IEnumerable<BMSApplication.Models.Receipt>

@{
    ViewBag.Title = "Index";
}

<h2>Receipt List</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Method)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tendered)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Change)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreditCardInvoice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Method)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tendered)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Change)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreditCardInvoice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-small btn-invert", @style = "width:70px" })
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-small btn-invert", @style = "width:70px" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-small btn-danger", @style = "width:70px" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("New Receipt", "Create", null, new { @class = "btn btn-small btn-success" })
</p>
