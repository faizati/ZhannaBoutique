@model BMSApplication.Models.Receipt

@{
    ViewBag.Title = "Delete";
}

<div class="span12">
    <div class="widget">
        <div class="widget-header">
            <i class="icon-inbox"></i>
            <h3>Delete Receipts</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">
            <h3>Are you sure you want to delete this?</h3>
            &nbsp;
            <table class="table">
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Date)</td>
                        <td>@Html.DisplayFor(model => model.Date)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Total)</td>
                        <td>@Html.DisplayFor(model => model.Total)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Method)</td>
                        <td>@Html.DisplayFor(model => model.Method)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Tendered)</td>
                        <td>@Html.DisplayFor(model => model.Tendered)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Change)</td>
                        <td>@Html.DisplayFor(model => model.Change)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.CreditCardInvoice)</td>
                        <td>@Html.DisplayFor(model => model.CreditCardInvoice)</td>
                    </tr>
                </tbody>
            </table>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" style="width:120px"  />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default", @style = "width:120px" })
                </div>
            }
        </div>
    </div>
</div>
